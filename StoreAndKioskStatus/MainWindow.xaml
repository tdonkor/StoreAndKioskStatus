<Window x:Class="StoreAndKioskStatus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreAndKioskStatus"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <Label x:Name="lblHeader" 
                Content="Acrelec Store and Kiosk Tracker"
                FontSize="20"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalContentAlignment="Center" 
               />
        <Image Source="Images/AcrelecNewLogo.png"
               Height="20"
               Margin="20,0,0,0"
               HorizontalAlignment="Left"
               />
        <!-- Frame Window-->
        <Frame x:Name="MainFrame"
               Source="Views/DisplayCustomers.xaml"
               BorderThickness="1"
               Grid.Row="1">
        </Frame>
 
</Grid>
</Window>
